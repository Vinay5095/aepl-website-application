{
  "name": "enterprise-trade-operations-os",
  "version": "2.0.0",
  "description": "Enterprise B2B Trade & Operations OS - Item-Level Workflow Management System",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "author": "Enterprise Trade OS Team",
  "license": "PROPRIETARY"
}
